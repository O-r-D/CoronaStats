<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:paddingTop="10dp" android:paddingBottom="10dp"
              android:orientation="horizontal">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tv_country_name" android:textStyle="bold"
                android:textSize="20sp" android:paddingStart="5dp" android:textAllCaps="true"
                android:textAlignment="textStart" tools:text="Germany" android:paddingEnd="5dp"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tv_country_cases" android:paddingStart="10dp"
                android:textSize="12sp" android:textAllCaps="false" tools:text="30,000"
                android:paddingEnd="10dp" android:textAlignment="textStart"
                android:textStyle="italic"/>
    </LinearLayout>
    <ImageView
            android:layout_width="41dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:id="@+id/imageView" android:layout_gravity="center" android:layout_weight="0"
    />
</LinearLayout>